<!-- Clean inline scripts -->
<script>
	$(document).ready(function() {
		function adjustLayout() {
			var sectionRideau = $('section.rideau');
			
			sectionRideau.each(function(el) {
				var newPadding = ((document.body.clientHeight - $(this).height()) / 2);
				console.log(newPadding);
				if (newPadding < ($('footer').height() + $('header').height()) / 2) newPadding = (($('footer').height() + $('header').height()) / 2) + 50; //TODO: DRY'fy this section
				//newPadding = newPadding + 50; //Always add 50 px to each side
				
				
				$(this).css("padding-top", newPadding + "px");
				$(this).css("padding-bottom", newPadding + "px");
			});
		}
		$(window).resize(adjustLayout);
		
		adjustLayout();
		
		//TODO: Improve this section... It is unmaintanable
		function adjustLayout2() {
			var sectionRideau = $('.auto-adjustable-y');
			
			sectionRideau.each(function(el) {
				var newPadding = ((document.body.clientHeight - $(this).height()) / 2);
				if (newPadding < 0) newPadding = 0;
				
				$(this).css("padding-top", newPadding + "px");
				$(this).css("padding-bottom", newPadding + "px");
			});
		}
		$(window).resize(adjustLayout2);
		
		adjustLayout2();
	});
</script>

