<!DOCTYPE html>
<html class="no-js rideau" lang="en" dir="ltr">
	<head>
		<% include _head.ejs %>
	</head>
	
	<body id="press">
		<% include _header.ejs %>
		
		<section class="rideau">
			<div class="row">
				<% for(var i = 0; i < data.walkInside.length; i++) {%>
					<div class="small-12 medium-6 large-4 columns">
						<div class="press-item">
							<a class="<%- data.walkInside[i].class %>" href="<%- data.walkInside[i].link %>" target="_blank">
								<div class="press-image" style="background-image: url('<%- data.walkInside[i].logo %>')"></div>
								<p><%- data.walkInside[i].title %></p>
							</a>
						</div>
					</div>
				<% } %>
			</div>
			
			<div id="essentialHomeModal" class="animated-rideau-modal">
				<!-- Important: To close the modal, the class name has to match the name given on the ID  class="close-animatedModal" -->
				<div class="closeContainer close-essentialHomeModal"> 
					<img src="/rideau-data/extras/modal-close.png" />
				</div>
				<div class="modal-content">
					<div class="auto-adjustable-y">
						<div class="row">
							<div class="small-6 columns">
								<img id="essential-img1" src="/rideau-data/press/essential-homme/images/1.jpg" style="max-width:85%" />
							</div>
							<div class="small-6 columns">
								<img id="essential-img2" src="/rideau-data/press/essential-homme/images/2.jpg" style="max-width:85%" />
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		
		<% include _footer.ejs %>
		<% include _scripts.ejs %>
	</body>
</html>